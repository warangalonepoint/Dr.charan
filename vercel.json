{
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    { "source": "/", "destination": "/login.html", "permanent": false },
    { "source": "/dashboard", "destination": "/dashboard.html", "permanent": false },
    { "source": "/doctor", "destination": "/dashboard.html", "permanent": false },
    { "source": "/supervisor", "destination": "/supervisor-dashboard.html", "permanent": false },
    { "source": "/frontoffice", "destination": "/frontoffice.html", "permanent": false },
    { "source": "/bookings", "destination": "/bookings.html", "permanent": false },
    { "source": "/booking-status", "destination": "/booking-status.html", "permanent": false },
    { "source": "/analytics", "destination": "/analytics.html", "permanent": false },
    { "source": "/alerts", "destination": "/alerts.html", "permanent": false },
    { "source": "/settings", "destination": "/settings.html", "permanent": false }
  ],
  "headers": [
    {
      "source": "/public/manifest.webmanifest",
      "headers": [
        { "key": "Content-Type", "value": "application/manifest+json" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/public/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/vendor/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
